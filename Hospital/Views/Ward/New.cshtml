@model Hospital.Models.Ward
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Ward</h2>

@using (Html.BeginForm("Save", "Ward"))
{
    @Html.ValidationSummary(true, "Please Fix this error.")
    <div class="form-group">
        @Html.LabelFor(w => w.WardName)
        @Html.TextBoxFor(w => w.WardName, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WardName)
    </div>
    @Html.HiddenFor(w => w.WardId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}