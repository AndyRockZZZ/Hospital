@model Hospital.Models.Drug
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Drug</h2>

@using (Html.BeginForm("Save", "Drug"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.DrugName)
        @Html.TextBoxFor(m => m.DrugName, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Dosage)
        @Html.TextBoxFor(m => m.Dosage, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}