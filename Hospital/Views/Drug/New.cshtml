@model Hospital.Models.Drug
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Drug</h2>

@using (Html.BeginForm("Save", "Drug"))
{
    @Html.ValidationSummary(true, "Please Fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.DrugName)
        @Html.TextBoxFor(m => m.DrugName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DrugName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Dosage)
        @Html.TextBoxFor(m => m.Dosage, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Dosage)
    </div>
    <br />
    @Html.HiddenFor(m => m.DrugId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}