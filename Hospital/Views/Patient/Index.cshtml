@model IEnumerable<Hospital.Models.Patient>
@{
    ViewBag.Title = "Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Patients</h2>

<p>
    @Html.ActionLink("New Patient", "New", "Patient", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>  </th>
            <th>ID</th>
            <th>Name</th>
            <th>Address 1</th>
            <th>Address 2</th>
            <th>PostCode</th>
            <th>Sex</th>
            <th>Date of Birth</th>
            <th>Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@Html.ActionLink("Edit", "Edit", "Patient", new { id = patient.PatientId }, null)</td>
                <td>@patient.PatientId</td>
                <td>@Html.ActionLink(patient.PatientName, "Details", "Patient", new { id = patient.PatientId }, null)</td>
                <td>@patient.Address1</td>
                <td>@patient.Address2</td>
                <td>@patient.PostCode</td>
                <td>@patient.Sex.Name</td>
                <td>@patient.DOB</td>
                <td>@patient.Status.Name</td>

            </tr>
        }
    </tbody>
</table>

