@model Hospital.ViewModels.PatientFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Patient</h2>

@using (Html.BeginForm("Save", "Patient"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Patient.PatientFirstName)
        @Html.TextBoxFor(m => m.Patient.PatientFirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Patient.PatientSurname)
        @Html.TextBoxFor(m => m.Patient.PatientSurname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Patient.Address1)
        @Html.TextBoxFor(m => m.Patient.Address1, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Patient.Address2)
        @Html.TextBoxFor(m => m.Patient.Address2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Patient.PostCode)
        @Html.TextBoxFor(m => m.Patient.PostCode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Patient.DOB)
        @Html.TextBoxFor(m => m.Patient.DOB, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(m => m.Patient.GenderId)
        @Html.DropDownListFor(m => m.Patient.GenderId, new SelectList(Model.Genders, "GenderId", "GenderName"), "Select Gender", new { @class = "form-control"})
    </div>

    @Html.HiddenFor(m => m.Patient.PatientId)
    <button type="submit" class="btn btn-primary">Save</button>
}