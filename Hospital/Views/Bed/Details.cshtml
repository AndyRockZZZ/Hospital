@model Hospital.Models.Bed
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Ward.WardName</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Bed ID</th>
            <th>Is Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bed in Model.BedId)
        {
            <tr>
                <td>@bed.BedId</td>
                <td>@bed.IsAvailable</td>
            </tr>
        }
    </tbody>
</table>

